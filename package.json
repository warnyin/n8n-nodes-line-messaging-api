{
	"name": "@warnyin/n8n-nodes-line-messaging-api",
	"version": "0.5.0",
	"description": "n8n node for LINE Messaging API integration",
	"keywords": [
		"n8n-community-node-package",
		"n8n",
		"line",
		"messaging",
		"line-messaging-api"
	],
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/warnyin/n8n-nodes-line-messaging-api",
	"author": {
		"name": "warnyin",
		"email": ""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/warnyin/n8n-nodes-line-messaging-api.git"
	},
	"main": "index.js",
	"scripts": {
		"build": "tsc && gulp build:icons",
		"dev": "tsc --watch",
		"format": "prettier nodes credentials --write",
		"lint": "eslint nodes credentials package.json",
		"lintfix": "eslint nodes credentials package.json --fix",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/LineMessagingApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/Line/Line.node.js",
			"dist/nodes/Line/LineTrigger.node.js"
		]
	},
	"devDependencies": {
		"@typescript-eslint/parser": "^7.0.0",
		"eslint": "^8.56.0",
		"eslint-plugin-n8n-nodes-base": "^1.16.1",
		"gulp": "^4.0.2",
		"n8n-workflow": "^1.0.0",
		"prettier": "^3.2.0",
		"typescript": "^5.3.0"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	},
	"dependencies": {
		"@line/bot-sdk": "^8.0.0"
	}
}
